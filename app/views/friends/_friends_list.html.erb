<%if !@friends.empty?%>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%@friends.each do |friend|%>
        <tr>
          <td><%=friend.fname%></td>
          <td><%=friend.lname%></td>
          <td><%= link_to "remove friend", friend_path(friend),
            method: :delete,data: {confirm: "are you sure?"},class: "btn btn-sm btn-warning"%>
          <%= link_to "view profile", user_path(friend),
           class: "btn btn-sm btn-info"%></td>
        </tr> 
      <%end%>
    </tbody>
  </table>
<%else%>
  <div class="card">
    <div class="card-body">
      <h3 class="text-info">No friends yet</h3>
    </div>
  </div>
<%end%>
