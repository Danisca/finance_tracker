
<%if !@stocks.empty?%>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Ticker</th>
        <th>Name</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%@stocks.each do |stock|%>
        <tr>
          <td><%=stock.ticker_symbol%></td>
          <td><%=stock.name%></td>
          <td><%=stock.price%></td>
          <td><%= link_to "remove stock", user_stock_path(stock),
            method: :delete,data: {confirm: "are you sure?"},class: "btn btn-sm btn-danger"%></td>
        </tr> 
      <%end%>
    </tbody>
  </table>
<%else%>
  <div class="card">
    <div class="card-body">
      <h3 class="text-info">No stocks yet</h3>
    </div>
  </div>
<%end%>
